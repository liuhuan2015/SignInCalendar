<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/user_bookin_data_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="今日"
        android:textColor="@color/usergender_red"
        android:textSize="14sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/user_bookin_data_rl"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/user_bookin_data_today"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cal_unsigned_bg">

        <TextView
            android:id="@+id/user_bookin_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="1"
            android:textColor="#99000000"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>